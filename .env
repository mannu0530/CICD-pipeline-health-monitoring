# CI/CD Pipeline Health Dashboard Environment Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/cicd_dashboard?authSource=admin
MONGODB_DB=cicd_dashboard

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_CHANNEL_ID=C1234567890

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# GitHub Configuration
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret-here

# GitLab Configuration
GITLAB_WEBHOOK_SECRET=your-gitlab-webhook-secret-here

# Jenkins Configuration
JENKINS_URL=http://your-jenkins-url
JENKINS_USERNAME=your-jenkins-username
JENKINS_API_TOKEN=your-jenkins-api-token

# Logging Configuration
LOG_LEVEL=INFO

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENV=development
