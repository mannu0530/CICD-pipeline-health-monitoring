# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=true

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cicd_dashboard
MONGODB_DB=cicd_dashboard

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C1234567890
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# GitHub Configuration
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
GITHUB_USERNAME=your-github-username
GITHUB_PASSWORD=your-github-personal-access-token
GITHUB_BASE_URL=https://api.github.com

# GitLab Configuration
GITLAB_WEBHOOK_SECRET=your-gitlab-webhook-secret
GITLAB_USERNAME=your-gitlab-username
GITLAB_PASSWORD=your-gitlab-personal-access-token
GITLAB_BASE_URL=https://gitlab.com

# Jenkins Configuration
JENKINS_URL=http://localhost:8080
JENKINS_USERNAME=your-jenkins-username
JENKINS_API_TOKEN=your-jenkins-api-token
JENKINS_WEBHOOK_SECRET=your-jenkins-webhook-secret

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/cicd_dashboard.log

# Rate Limiting
RATELIMIT_DEFAULT=100 per minute
RATELIMIT_STORAGE_URL=redis://localhost:6379/0

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
SECURE_HEADERS_ENABLED=false

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_COLLECTION_ENABLED=true
ALERTING_ENABLED=true
